<h1> Movies </h1>

<h4><%= pluralize(@movies.size, 'Event') %> listed </h4>

<% @movies.each do |movie| %>
  <article>
    <header>
      <h2><%= link_to(movie.title, movie) %></h2>
    </header>
    <p>
      <%= truncate(movie.description) %>
    </p>
    <table>
      <tr>
        <th>Released:</th>
        <td><%= movie.released_on %></td>
      </tr>
      <tr>
        <th>Rating:</th>
        <td><%= movie.rating %></td>
      </tr>
      <tr>
        <th>Total Gross:</th>
        <td><%= format_total_gross(movie) %></td>
      </tr>
    </table>
  </article>
<% end %>